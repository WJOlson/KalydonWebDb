@{
    ViewData["Title"] = "ShowSearchForm";
}
<h1> Project Tasks Search </h1>
<h4> Search for a given task within a date range </h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="ShowTasksDateRange">
            <div class="form-group">
                <label class="control-label" for="minDate">Project Tasks Start Date</label>
                <input type="date" name="minDate" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label" for="maxDate">Project Tasks End Date</label>
                <input type="date" name="maxDate" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>