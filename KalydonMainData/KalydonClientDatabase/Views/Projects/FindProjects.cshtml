@{
    ViewData["Title"] = "FindProjects";
}

<h2> Find Projects </h2>
<h4> Find projects by their name</h4>
<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <form asp-action="FindProjectByName">
                <label class="control-label" for="name" name="name">Project Name</label>
                <input name="name" class="form-control" />
                <div class="form-group">
                    <input type="submit" value="Search" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>